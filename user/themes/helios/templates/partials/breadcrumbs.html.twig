{% set breadcrumbs = helios_breadcrumbs|default([]) %}

{% if breadcrumbs|length > 1 %}
<nav class="breadcrumbs mb-6" aria-label="Breadcrumb">
    <ol class="flex items-center gap-2 flex-wrap">
        {% for crumb in breadcrumbs %}
            {% if not loop.last %}
                <li class="flex items-center gap-2">
                    <a href="{{ crumb.url }}" class="hover:text-primary">
                        {% if loop.first %}
                            {# Home icon #}
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                            </svg>
                            <span class="sr-only">{{ crumb.title }}</span>
                        {% else %}
                            {{ crumb.title }}
                        {% endif %}
                    </a>
                    <svg class="separator w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                </li>
            {% else %}
                <li>
                    <span class="current" aria-current="page">{{ crumb.title }}</span>
                </li>
            {% endif %}
        {% endfor %}
    </ol>
</nav>
{% endif %}
