{# Important callout - must-know information #}
{% macro important(content, title) %}
<div class="callout callout-important">
    <div class="callout-header">
        <svg class="callout-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
        </svg>
        <span class="callout-title">{{ title|default('Important') }}</span>
    </div>
    <div class="callout-content">
        {{ content|markdown }}
    </div>
</div>
{% endmacro %}

{# Collapsible callout #}
{% macro collapsible(content, title, type, open) %}
<details class="callout callout-{{ type|default('note') }} callout-collapsible" {{ open ? 'open' : '' }}>
    <summary class="callout-header cursor-pointer">
        <svg class="callout-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <span class="callout-title">{{ title|default('Details') }}</span>
        <svg class="expand-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
    </summary>
    <div class="callout-content">
        {{ content|markdown }}
    </div>
</details>
{% endmacro %}
