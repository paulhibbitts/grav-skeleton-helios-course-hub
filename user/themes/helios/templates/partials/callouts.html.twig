{#
 # Callout/Admonition Macros
 #
 # Usage in markdown via shortcodes or directly in templates:
 # {% import 'partials/callouts.html.twig' as callouts %}
 # {{ callouts.note('This is a note', 'Important') }}
 #}

{# Note callout - informational #}
{% macro note(content, title) %}
<div class="callout callout-note">
    <div class="callout-header">
        <svg class="callout-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <span class="callout-title">{{ title|default('Note') }}</span>
    </div>
    <div class="callout-content">
        {{ content|markdown }}
    </div>
</div>
{% endmacro %}

{# Tip callout - helpful suggestions #}
{% macro tip(content, title) %}
<div class="callout callout-tip">
    <div class="callout-header">
        <svg class="callout-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
        </svg>
        <span class="callout-title">{{ title|default('Tip') }}</span>
    </div>
    <div class="callout-content">
        {{ content|markdown }}
    </div>
</div>
{% endmacro %}

